* {
	font-family: 'JetBrainsMono Nerd Font Propo', sans-serif;
	color: #342a45 ;
	border-radius: 8;
	font-size: 14px;
	padding: 0px;
	background: transparent;
}

window#waybar {
	background-image: linear-gradient(to bottom, #342a45 100%);
	border-radius: 14px;
	padding:0px;
	border: 2px solid #edba9f;
}

#battery,
#network,
#clock,
#custom-applauncher,
#tray,
#works,
#pulseaudio {
  background-image: linear-gradient(to bottom, #f91c47 100%);

  margin: 6px;
  margin-right: 0px;
  padding: 4px 8px;
  border-radius: 8px;

  border: 2px solid #892543;
  transition-duration: 120ms; 
}

#clock {
  margin-right: 6px;
}

#custom-applauncher {
  font-weight: bold;
  transition-duration: 120ms
}

#custom-applauncher:hover {
  background-image: linear-gradient(to bottom, #ff6f3c 100%);
  color: #141216;
  transition-duration: 120ms;
}

#pulseaudio:hover {
  background-image: linear-gradient(to bottom, #ff6f3c 100%);
  color: #141216;
  transition-duration: 120ms;
}

#tray menu {
  background-color: #342a45;
  padding: 4px;
}
#tray menu menuitem {
  background-image: linear-gradient(to bottom, #f91c47 100%);

  margin: 3px;
  border-radius: 4px;
  border-style: solid;
  border-color: #27232b;
}
#tray menu menuitem:hover {
  background-image: linear-gradient(to bottom, #ff6f3c 100%);
  font-weight: bold;
}
