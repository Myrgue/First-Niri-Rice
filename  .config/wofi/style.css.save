* {
  font-family: Jet Brains Mono Nerd Font, sans-serif;
  background: transparent;
  color: #342a45;
}

#window {
  color: #d8cab8;
  border-color: #f91c47;
  border-style: solid;
  border-width: 2px;

  /*Linear gradient background instead of standard background, because it makes cleaner border-radius cuts, issa bug :p*/
  background-image: linear-gradient(to bottom, # 100%);
  border-radius: 14px;
}

#scroll {
  border-top-style: solid;
  border-width: 1px;
  border-color: #342a45;
}
#inner-box {
  padding-top: 12px;
}

#entry {
  border-style: none;
  border-color: #d8cab8;
  color: #d8cab8;
  padding: 6px;
  margin-bottom: 8px;
  margin-left: 12px;
  margin-right: 12;

  border-radius: 12px;
}

#entry:selected {
  background: #ff6f3c;
  color: #d8cab8;
  font-weight: bold;
  outline: none;
}
